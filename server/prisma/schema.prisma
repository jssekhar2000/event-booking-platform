generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  VENDOR
  ADMIN
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  role     Role
  vendor   Vendor?
  bookings Booking[]
}

model Vendor {
  id          Int     @id @default(autoincrement())
  userId      Int     @unique
  vendorName  String
  description String
  user        User    @relation(fields: [userId], references: [id])
  events      Event[]
}

model Event {
  id              Int      @id @default(autoincrement())
  vendorId        Int
  title           String
  description     String
  date            DateTime
  location        String
  category        String
  availableTickets Int
  vendor   Vendor   @relation(fields: [vendorId], references: [id])
  bookings Booking[]
  status String @default("PENDING")
}

model Booking {
  id          Int      @id @default(autoincrement())
  userId      Int
  eventId     Int
  bookingDate DateTime @default(now())
  user  User  @relation(fields: [userId], references: [id])
  event Event @relation(fields: [eventId], references: [id])
}
